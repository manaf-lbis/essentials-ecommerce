<html lang="en">
<head>

  <%-include('../../partials/htmlHeadUser.ejs',{csspath:'/css/userCss/purchase/checkout.css'})  %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>


  <%- include('../../partials/userNavbar.ejs')  %>

    <section class="h-100 gradient-custom">
        <div class="container py-5">

          <form id="checkoutForm"  action="/placeOrder" method="post">
          <div class="row d-flex justify-content-center my-4">

            <div class="col-md-8">
                  <!-- Heading -->
              <div class="card mb-4">
                <div class="card-header py-3 ">
                  <h5 class="mb-0">Checkout </h5>
                </div>
                
              </div>
              <!-- Heading Ends -->

    

              <!-- card Ends -->
              <div class="card mb-4">
                <div class="card-header py-3 bg-white">
                  <h5 class="mb-0">Delivery Address </h5>
                </div>
                
                <div class="card-body">
                  <!-- Single item -->
                  <div class="row">

                    <% if(userAddress?.address?.length > 0 ){ %>
                    
                      <% for( let address of userAddress.address){  %>

                      <div class="addressSec col-md-12" >
                          <input name="deliveryAddress" value="<%= address._id  %>"  type="radio">
                          <p class=""><address> <%= `${address.fullName },${address.houseName },${address.area},${address.street
                                                },${address.pincode }` %></address></p>
                      </div>

                      <% } %>
                    <% } %>
                    
                  </div>
                  <a href="/address" class="btn btn-primary"  >Add Address +</a>
                </div>
              </div>
              <!-- card Ends -->


              <!-- card Starts -->
              <div class="card mb-4">
                <div class="card-header py-3 bg-white">
                  <h5 class="mb-0">Payment Methord </h5>
                </div>
                
                <div class="card-body">
                  <!-- Single item -->
                  <div class="row">

                    <div class="addressSec col-md-12" >
                        <input name="paymentMethod" value="COD"  type="radio">
                        <p class="">Cash on Delivery</p>
                    </div>
                   

                  </div>
                </div>
              </div>
              <!-- card Ends -->

            </div>


            

            <div class="col-md-4">
              <div class="card mb-4">
                <div class="card-header py-3">
                  <h5 class="mb-0">Summary</h5>
                </div>
                <div class="card-body">
                  <ul class="list-group list-group-flush">
                    <li
                      class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                      Price
                      <span>₹<%= totalAmount  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                      Total Items 
                      <span><%= totalItems  %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                      Shipping charge
                      <span>0</span>
                    </li>
                    <li
                      class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                      <div>
                        <strong>Total amount</strong>
                        <strong>
                          <p class="mb-0">(including all taxes)</p>
                        </strong>
                      </div>
                      <span><strong>₹<%= totalAmount  %></strong></span>
                    </li>
                  </ul>
      
                  <button  type="submit" data-mdb-button-init data-mdb-ripple-init id="proceedButton" class="btn btn-primary btn-lg btn-block">
                    Place Your Order
                  </button>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </form>

      </section>

  
      <%- include('../../partials/userFooter.ejs')  %>
      <script src="/js/userjs/purchase/checkout.js"></script>
    
</body>
</html>