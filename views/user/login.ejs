<body>

<div class="container">

    <!-- logo -->
    <div class="leftSection"> 
        <div></div>
            <img src="/assets/images/logo.png" alt="">
            <h4>smart choice for smart living</h4>
    </div>
             
    <!-- form -->
    <div class="rightSection rounded-3">
        <div class="m-4">  
            <h3 class="py-3 ">Login</h3>

            <form action="" method="post">
                <label for="exampleFormControlInput1" class="form-label">Email address</label>
                <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" required>
                
                <label for="exampleFormControlInput1" class="form-label pt-3">Password</label>
                <input type="password" name="password" class="form-control" id="exampleFormControlInput1" placeholder="password" required>
                
                <button type="submit" class="btn btn-primary my-3 w-100">Submit</button>
                
            </form>    
          </div>

          <div class="separator">
            <span>OR</span>
        </div>

        <div class="googleLogin">
            <div>
                <img class="googleimg" src="/assets/images/google.webp" alt="">
                <img src="/assets/images/facebook.webp" alt="">
            </div>   
        </div>

        <div class="existingUser mb-3">
            <div>
                <span>New user?</span>
                <a href="">sign Up</a>
            </div>
        </div>
            
    </div>
</div>

    
   
   
